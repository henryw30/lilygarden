<h3><%= @header %></h3>

<table class="table table-hover">
	<thead>
		<th>Item</th>
		<% if @num_sizes == 1 %>
			<th>Price</th>
		<% else %>
			<th>Small</th>
			<th>Large</th>
		<% end %>
	</thead>
	<% @items_hash.each do |item| %>
	<tr>
		<% if item['spicy']==1 %>
			<td> <span class="glyphicon glyphicon-fire"></span> <%= item['name']%></td>
		<%else%>
			<td><%= item['name']%></td>
		<%end%>
		<% if @num_sizes == 1 %>
			<td><%= number_to_currency(item['price'][0]) %></td>
		<% else %>
			<td><%= number_to_currency(item['price'][0]) %></td>
			<td><%= number_to_currency(item['price'][1]) %></td>
		<% end %>
	</tr>
	<% end %>
</table>