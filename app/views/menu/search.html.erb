<h2><%= "You searched for \"#{@raw_query}\"." %></h2>
<h2><%= "#{@results.size} " << "result".pluralize(@results.size) << " found." %></h2>
<table class="table table-striped">
	<thead>
		<th>Item</th>
		<th>Small</th>
		<th>Large</th>
	</thead>
	<% @results.each do |item| %>
	<tr>
		<% if item['spicy']==1 %>
			<td> <span class="glyphicon glyphicon-fire"></span> <%= item['name']%></td>
		<%else%>
			<td><%= item['name']%></td>
		<%end%>
		<% if item['price'].size == 1 %>
			<td><%= "-" %></td>
			<td><%= number_to_currency(item['price'][0]) %></td>
		<% else %>
			<td><%= number_to_currency(item['price'][0]) %></td>
			<td><%= number_to_currency(item['price'][1]) %></td>
		<% end %>
	</tr>
	<% end %>
</table>