<!DOCTYPE html>
<html>
<head>
  <title>MenuApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse ">
		<div class = "container">
			<div id = "navbar" class ="navbar-collapse collapse" >
				<ul class="nav navbar-nav">
					<li class="dropdown">
						<a href = "#" class ="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup = "true" aria-expanded = "false">Menu <span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<% @menu_hash.each do |section| %>
								<li>
									<%= section['header']%>
								</li>
							<%end%>
						</ul>
					</li>
					<li>
						<a href"#"><%= @restaurant_name%></a>
					</li>
					<li>
						<%=@phone%>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<div class = "container theme-showcase" roll="main">
		<%= yield %>
	</div>
</body>
</html>
