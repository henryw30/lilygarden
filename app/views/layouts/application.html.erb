<!DOCTYPE html>
<html>
<head>
  <title><%= @restaurant_name %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse ">
		<div class = "container">
			<div id = "navbar" class ="navbar-collapse collapse" >
				<ul class="nav navbar-nav">
					<li class="dropdown">
						<a href = "#" class ="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup = "true" aria-expanded = "false">Menu <span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<% id_counter = 0 %>
							<% @menu_hash.each do |section| %>
								<li>
									<%= link_to("#{section['header']}", {:controller => 'menu', :action => 'show', :id => id_counter}) %>
								</li>
								<% id_counter += 1 %>
							<% end %>
						</ul>
					</li>
					<li>
						<%= link_to("#{@restaurant_name}", :root) %>
					</li>
				</ul>
				<%= form_tag("/menu/search", method: "get", :class => "navbar-form navbar-right") do %>
					<%= text_field_tag(:q, nil, :class => 'form-control', :placeholder => 'Search') %>
					<%= submit_tag("Search", :class => "btn btn-primary") %>
				<% end %>
				
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a href="#"><%=@phone%></a>
					</li> 
				</ul>
			</div>
		</div>
	</nav>
	<div class = "container theme-showcase" roll="main">
		<%= yield %>
	</div>
</body>
</html>
