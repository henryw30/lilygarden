commands: 
  01_gem_update: 
    command: 'sudo -s'
    command: '/opt/rubies/ruby-2.6.5/bin/gem update --system'
    command: 'exit'

  02_rails: 
    command: 'sudo -s'
    command: '/opt/rubies/ruby-2.6.5/bin/gem install rails'
    command: 'exit'

  03_bundler: 
    command: 'sudo -s'
    command: '/opt/rubies/ruby-2.6.5/bin/gem install bundler'
    command: 'exit'

  07_home_dir: 
    test: '[ ! -p /home/webapp ] && echo "webapp not exited"'
    command: 'sudo mkdir -p /home/webapp'

  08_grant_home_dir: 
    test: '[ ! -p /home/webapp ] && echo "webapp not exited"'
    command: 'sudo chmod 777 /home/webapp'